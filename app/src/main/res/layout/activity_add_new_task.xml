<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.blackprince.tasks.AddNewTaskActivity">

    <EditText
        android:id="@+id/newUserText"
        android:layout_width="295dp"
        android:layout_height="38dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="47dp"
        android:background="@android:color/transparent"
        android:text="USER NAME"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </EditText>

    <Button
        android:id="@+id/saveTaskButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="148dp"
        android:layout_marginTop="58dp"
        android:text="Save Task"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newUserText"/>

    <Button
        android:id="@+id/goToTasksBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go To Tasks"
        android:layout_marginLeft="148dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/saveTaskButton"/>


</android.support.constraint.ConstraintLayout>
